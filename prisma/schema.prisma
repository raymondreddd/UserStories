// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id           String    @id @unique
  user         String
  role         String
  community    String
  createdAt    DateTime  @default(now())
  userref      User      @relation(fields: [user], references: [id])
  roleref      Role      @relation(fields: [role], references: [id])
  communityref Community @relation(fields: [community], references: [id])
}

model Community {
  id         String   @id @unique
  name       String   @db.VarChar(128)
  slug       String   @unique @db.VarChar(255)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  owner      String
  useref     User     @relation(fields: [owner], references: [id])
  members    Member[]
}

model Role {
  id         String   @id @unique
  name       String   @unique @db.VarChar(64)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  members    Member[]
}

model User {
  id         String   @id @unique
  name       String   @default("") @db.VarChar(64)
  email      String   @unique @db.VarChar(128)
  password   String   @db.VarChar(64)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  members   Member[]
  community Community[]
}
